{
    "name": "DataViz Studio Development",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ritwickdey.liveserver"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode"
            }
        }
    },
    "forwardPorts": [
        5500,
        8000,
        3000
    ],
    "postCreateCommand": "echo 'DataViz Studio is ready! Open index.html with Live Server extension or run: python3 -m http.server 8000'"
}